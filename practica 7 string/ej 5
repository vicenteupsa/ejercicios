#include <iostream>
#include <string>

using namespace std;

void leerCadena(string &texto, const string &mensaje) {
    cout << mensaje;
    getline(cin, texto);
}

string mezclarCadenas(const string &cadena1, const string &cadena2) {
    return cadena1 + cadena2;
}

void mostrarResultado(const string &mezcla) {
    cout << "\n--- RESULTADO ---\n";
    cout << "Cadenas mezcladas: " << mezcla << endl;
}

int main() {
    string cadena1, cadena2, mezcla;

    leerCadena(cadena1, "Introduce la primera cadena: ");
    leerCadena(cadena2, "Introduce la segunda cadena: ");
    
    mezcla = mezclarCadenas(cadena1, cadena2);
    mostrarResultado(mezcla);

    return 0;
}
