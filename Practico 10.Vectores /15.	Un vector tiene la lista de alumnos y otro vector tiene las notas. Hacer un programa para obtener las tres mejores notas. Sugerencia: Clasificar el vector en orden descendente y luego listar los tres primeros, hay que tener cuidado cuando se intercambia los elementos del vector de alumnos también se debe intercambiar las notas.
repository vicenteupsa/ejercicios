#include <iostream>
#include <vector>
#include <string>
using namespace std;

int main() {
    vector<string> alumnos;
    vector<double> notas;
    int cantidad;
    string nombre;
    double nota;
    
    // Pedir al usuario que ingrese los datos
    cout << "¿Cuántos alumnos deseas ingresar? ";
    cin >> cantidad;
    
    cout << "Ingresa los datos de " << cantidad << " alumnos:" << endl;
    for(int i = 0; i < cantidad; i++) {
        cout << "\nAlumno " << i + 1 << ":" << endl;
        cout << "Nombre: ";
        cin.ignore(); // Limpiar el buffer
        getline(cin, nombre);
        cout << "Nota: ";
        cin >> nota;
        
        alumnos.push_back(nombre);
        notas.push_back(nota);
    }
    
    // Ordenar descendente (mejores notas primero)
    for(int i = 0; i < notas.size() - 1; i++) {
        for(int j = 0; j < notas.size() - i - 1; j++) {
            if(notas[j] < notas[j+1]) {
                // Intercambiar notas
                double tempNota = notas[j];
                notas[j] = notas[j+1];
                notas[j+1] = tempNota;
                
                // Intercambiar alumnos
                string tempAlumno = alumnos[j];
                alumnos[j] = alumnos[j+1];
                alumnos[j+1] = tempAlumno;
            }
        }
    }
    
    cout << "\nLas tres mejores notas:" << endl;
    for(int i = 0; i < 3 && i < notas.size(); i++) {
        cout << i+1 << ". " << alumnos[i] << ": " << notas[i] << endl;
    }
    
    return 0;
}
