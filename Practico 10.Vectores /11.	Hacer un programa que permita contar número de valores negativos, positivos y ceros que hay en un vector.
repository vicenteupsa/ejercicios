#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> numeros = {5, -2, 0, 8, -1, 0, 3, -4, 7};
    int positivos = 0, negativos = 0, ceros = 0;
    
    for(int num : numeros) {
        if(num > 0) {
            positivos++;
        } else if(num < 0) {
            negativos++;
        } else {
            ceros++;
        }
    }
    
    cout << "Positivos: " << positivos << endl;
    cout << "Negativos: " << negativos << endl;
    cout << "Ceros: " << ceros << endl;
    
    return 0;
}
