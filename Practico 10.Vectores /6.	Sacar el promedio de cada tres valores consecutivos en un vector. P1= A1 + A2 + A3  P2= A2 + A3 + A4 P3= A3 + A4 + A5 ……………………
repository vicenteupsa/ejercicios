#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> numeros = {1, 2, 3, 4, 5, 6, 7, 8, 9};
    vector<double> promedios;
    
    for(int i = 0; i <= numeros.size() - 3; i++) {
        double suma = numeros[i] + numeros[i+1] + numeros[i+2];
        double promedio = suma / 3.0;
        promedios.push_back(promedio);
    }
    
    cout << "Promedios cada 3 valores consecutivos:" << endl;
    for(int i = 0; i < promedios.size(); i++) {
        cout << "P" << i+1 << " = " << promedios[i] << endl;
    }
    
    return 0;
}
