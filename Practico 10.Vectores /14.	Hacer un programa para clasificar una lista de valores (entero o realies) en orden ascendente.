#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> numeros;
    int cantidad, numero;
    
    // Pedir al usuario que ingrese los datos
    cout << "¿Cuántos números deseas ingresar? ";
    cin >> cantidad;
    
    cout << "Ingresa " << cantidad << " números:" << endl;
    for(int i = 0; i < cantidad; i++) {
        cout << "Número " << i + 1 << ": ";
        cin >> numero;
        numeros.push_back(numero);
    }
    
    cout << "Vector original: ";
    for(int num : numeros) {
        cout << num << " ";
    }
    cout << endl;
    
    // Ordenar usando algoritmo de burbuja
    for(int i = 0; i < numeros.size() - 1; i++) {
        for(int j = 0; j < numeros.size() - i - 1; j++) {
            if(numeros[j] > numeros[j+1]) {
                // Intercambiar
                int temp = numeros[j];
                numeros[j] = numeros[j+1];
                numeros[j+1] = temp;
            }
        }
    }
    
    cout << "Vector ordenado: ";
    for(int num : numeros) {
        cout << num << " ";
    }
    cout << endl;
    
    return 0;
}
