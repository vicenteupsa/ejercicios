#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> numeros;
    int cantidad, numero;
    
    cout << "¿Cuántos números deseas ingresar? ";
    cin >> cantidad;
    
    cout << "Ingresa " << cantidad << " números:" << endl;
    for(int i = 0; i < cantidad; i++) {
        cout << "Número " << i + 1 << ": ";
        cin >> numero;
        numeros.push_back(numero);
    }
    
    int minimo = numeros[0];
    
    for(int i = 1; i < numeros.size(); i++) {
        if(numeros[i] < minimo) {
            minimo = numeros[i];
        }
    }
    
    cout << "El valor mínimo es: " << minimo << endl;
    return 0;
}
